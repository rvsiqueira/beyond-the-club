# ===== Sports Configuration =====
# Available sports (comma-separated): surf, tennis
# Default: surf
SPORTS=surf

# ===== Surf Configuration =====
# Levels: Iniciante1, Iniciante2, Intermediario1, Intermediario2, Avançado1, Avançado2
SURF_LEVELS=Iniciante1,Iniciante2,Intermediario1,Intermediario2,Avançado1,Avançado2

# Wave sides: Lado_esquerdo, Lado_direito
SURF_WAVE_SIDES=Lado_esquerdo,Lado_direito

# ===== Tennis Configuration =====
# Courts: Quadra_Saibro
TENNIS_COURTS=Quadra_Saibro

# ===== Session Preferences (Legacy/Fallback for Surf) =====
# These are kept for backwards compatibility
# New installations should use SURF_LEVELS and SURF_WAVE_SIDES instead
SESSION_LEVELS=Iniciante1,Iniciante2,Intermediario1
WAVE_SIDES=Lado_esquerdo,Lado_direito

# Target hours to book (24h format, comma-separated)
# Leave empty to accept any available time
# Example: 08:00,10:00,14:00,16:00
TARGET_HOURS=

# Target dates to book (YYYY-MM-DD format, comma-separated)
# Leave empty to accept any available date
# Example: 2024-01-15,2024-01-20,2024-01-25
TARGET_DATES=

# ===== Scheduled Tasks =====
# Admin phone for scheduled availability refresh (uses this user's Beyond tokens)
ADMIN_PHONE=+5511972741849

# ===== Bot Settings =====
# Check interval in seconds (default: 60 = 1 minute)
CHECK_INTERVAL_SECONDS=60

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Automatically book when session becomes available (true/false)
AUTO_BOOK=true

# Minimum minutes before session start to consider it bookable (default: 20)
# Sessions that have already started or will start in less than this time are ignored
SESSION_START_BUFFER_MINUTES=20

# ===== JWT Authentication (for Web/API) =====
# Generate secret with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ===== Docker/API Configuration =====
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
DEBUG=true

# ===== MCP Server Configuration =====
# Host and port for MCP SSE server
MCP_HOST=0.0.0.0
MCP_PORT=8001

# API Key for Voice Agent authentication
# Generate with: openssl rand -hex 32
# If not set, MCP runs in dev mode (no auth required)
MCP_API_KEY=

# Session token expiry in seconds (default: 600 = 10 minutes)
MCP_SESSION_EXPIRY_SECONDS=600

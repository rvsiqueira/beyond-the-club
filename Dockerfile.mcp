# Dockerfile for MCP Server
# Requires Python 3.10+ for mcp package
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY mcp_btc/ ./mcp_btc/

# Copy entrypoint script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Create data directory and initialize empty cache files
RUN mkdir -p /app/data && \
    echo '{}' > /app/.beyondtheclub_tokens.json && \
    echo '{}' > /app/.beyondtheclub_members.json && \
    echo '{}' > /app/.beyondtheclub_availability.json && \
    echo '{}' > /app/.beyondtheclub_preferences.json && \
    echo '{}' > /app/data/users.json && \
    echo '{}' > /app/data/graph.json && \
    echo '{}' > /app/data/.beyondtheclub_user_tokens.json

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app

# MCP server runs on SSE transport via HTTP
EXPOSE 8001

# Use entrypoint to ensure cache files exist
ENTRYPOINT ["/docker-entrypoint.sh"]

# Run the MCP server with SSE transport
CMD ["python", "-m", "mcp_btc.sse_server"]
